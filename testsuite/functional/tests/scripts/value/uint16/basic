 # basic Uint16 tests

(tx 'create schema test')
(tx 'create table test.item(field_one: uint16, field_two: uint16)')
(tx 'insert (1,1), (2,2), (3,3), (4,4) into test.item (field_one, field_two)')
---
ok

tx 'from test.item select field_one, field_two'
---
+-----------+-----------+
| field_one | field_two |
+-----------+-----------+
|     1     |     1     |
|     2     |     2     |
|     3     |     3     |
|     4     |     4     |
+-----------+-----------+

tx 'from test.item select field_one + field_two'
---
+-------------------------+
| (field_one + field_two) |
+-------------------------+
|            2            |
|            4            |
|            6            |
|            8            |
+-------------------------+

tx 'from test.item select field_one - field_two'
---
+-------------------------+
| (field_one - field_two) |
+-------------------------+
|            0            |
|            0            |
|            0            |
|            0            |
+-------------------------+

tx 'from test.item select field_one * field_two'
---
+-------------------------+
| (field_one * field_two) |
+-------------------------+
|            1            |
|            4            |
|            9            |
|           16            |
+-------------------------+

tx 'from test.item select field_one / field_two'
---
+-------------------------+
| (field_one / field_two) |
+-------------------------+
|            1            |
|            1            |
|            1            |
|            1            |
+-------------------------+

tx 'from test.item select field_one % field_two'
---
+-------------------------+
| (field_one % field_two) |
+-------------------------+
|            0            |
|            0            |
|            0            |
|            0            |
+-------------------------+
