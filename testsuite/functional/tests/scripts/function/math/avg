# avg can be used to calculate a scalar value

(tx 'create schema test')
(tx 'create table test.arith(id: int2, num: int2)')
(tx 'insert (1,6), (2,8), (3,4), (4,2), (5,3) into test.arith(id,num)')
rx 'from test.arith select avg(id, num)'
---
+--------------+
| avg(id, num) |
+--------------+
|     3.5      |
|      5       |
|     3.5      |
|      3       |
|      4       |
+--------------+

rx 'from test.arith select avg(id, num)'
---
+--------------+
| avg(id, num) |
+--------------+
|     3.5      |
|      5       |
|     3.5      |
|      3       |
|      4       |
+--------------+


