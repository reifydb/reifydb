(command 'create namespace test')

(command 'create table test.conversion{col: int16}')
(command 'from [{ col: 0 }] insert test.conversion')
command 'from test.conversion map cast(col, float8)'
---
> +-------+
> |  col  |
> +-------+
> |   0   |
> +-------+
> 


(command 'from [{ col: 9007199254740992 }] insert test.conversion')
command 'from test.conversion map cast(col, float8)'
---
> +--------------------+
> |        col         |
> +--------------------+
> |  9007199254740992  |
> |         0          |
> +--------------------+
> 

(command 'from [{ col: -9007199254740992 }] insert test.conversion')
command 'from test.conversion map cast(col, float8)'
---
> +---------------------+
> |         col         |
> +---------------------+
> |  -9007199254740992  |
> |  9007199254740992   |
> |          0          |
> +---------------------+
> 

(command 'from [{ col: 9007199254740993 }] insert test.conversion')
!command 'from test.conversion map cast(col, float8)'
---
