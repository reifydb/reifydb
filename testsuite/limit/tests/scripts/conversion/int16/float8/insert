(command 'create schema test')

(command 'create table test.conversion{col: float8}')

(command 'from [{ col: cast(cast(0, int16), float8) }] insert test.conversion')
command 'from test.conversion map col'
---
> +-------+
> |  col  |
> +-------+
> |   0   |
> +-------+
> 

(command 'from [{ col: cast(cast(9007199254740992, int16), float8) }] insert test.conversion')
command 'from test.conversion map col'
---
> +--------------------+
> |        col         |
> +--------------------+
> |  9007199254740992  |
> |         0          |
> +--------------------+
> 

(command 'from [{ col: cast(cast(-9007199254740992, int16), float8) }] insert test.conversion')
command 'from test.conversion map col'
---
> +---------------------+
> |         col         |
> +---------------------+
> |  -9007199254740992  |
> |  9007199254740992   |
> |          0          |
> +---------------------+
> 

(command 'create table test.float8_test10{col: float8}')
