# ORDER BY, LIMIT, OFFSET

transpile 'SELECT * FROM users ORDER BY name ASC'
---
FROM users SORT {name:asc}

transpile 'SELECT * FROM users ORDER BY age DESC'
---
FROM users SORT {age}

transpile 'SELECT * FROM users ORDER BY dept ASC, name DESC'
---
FROM users SORT {dept:asc, name}

transpile 'SELECT * FROM users ORDER BY name'
---
FROM users SORT {name:asc}

transpile 'SELECT * FROM users LIMIT 10'
---
FROM users TAKE 10

transpile 'SELECT * FROM users LIMIT 10 OFFSET 20'
---
FROM users TAKE 10 OFFSET 20
