# Tests various keys.

# Keys are case-sensitive.
set a=1
get a
get A
---
"a" => "1"
"A" => None

set A=2
get a
get A
---
"a" => "1"
"A" => "2"

remove a
remove A
scan
---
"A" => "tombstone"
"a" => "tombstone"

scan
---
"A" => "tombstone"
"a" => "tombstone"

# NUL keys and values are valid.
set "\0"="\0"
get "\0"
scan
remove "\0"
---
"\x00" => "\x00"
"\x00" => "\x00"
"A" => "tombstone"
"a" => "tombstone"

scan
---
"\x00" => "tombstone"
"A" => "tombstone"
"a" => "tombstone"

# Unicode keys and values work, but are shown as raw UTF-8 bytes.
set "ðŸ‘‹"="ðŸ‘‹"
get "ðŸ‘‹"
scan
remove "ðŸ‘‹"
---
"\xf0\x9f\x91\x8b" => "\xf0\x9f\x91\x8b"
"\x00" => "tombstone"
"A" => "tombstone"
"a" => "tombstone"
"\xf0\x9f\x91\x8b" => "\xf0\x9f\x91\x8b"

scan
---
"\x00" => "tombstone"
"A" => "tombstone"
"a" => "tombstone"
"\xf0\x9f\x91\x8b" => "tombstone"

# Empty keys and values are valid.
set ""=""
get ""
scan
remove ""
get ""
---
"" => ""
"" => ""
"\x00" => "tombstone"
"A" => "tombstone"
"a" => "tombstone"
"\xf0\x9f\x91\x8b" => "tombstone"
"" => None
