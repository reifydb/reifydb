# Tests that dropped keys can be set and removed again.

# Insert and drop
set a=1
---
ok

contains a
---
"a" => true

drop a
---
ok

contains a
---
"a" => false

get a
---
"a" => None

# Set again after drop
set a=new
---
ok

contains a
---
"a" => true

get a
---
"a" => "new"

# Remove the re-inserted key
remove a
---
ok

contains a
---
"a" => false

get a
---
"a" => None

# Set again after remove
set a=final
---
ok

contains a
---
"a" => true

get a
---
"a" => "final"

# Drop again
drop a
---
ok

contains a
---
"a" => false

get a
---
"a" => None

# And set once more
set a=resurrected
---
ok

contains a
---
"a" => true

get a
---
"a" => "resurrected"
