# Test TAKE with integer literal
parse 'FROM users | TAKE 10'
---
> Program
> `-- [0] Pipeline
>     +-- [0] From(users)
>     `-- [1] Take
>         `-- Integer(10)
>

# Test TAKE with zero
parse 'FROM users | TAKE 0'
---
> Program
> `-- [0] Pipeline
>     +-- [0] From(users)
>     `-- [1] Take
>         `-- Integer(0)
>

# Test TAKE with large number
parse 'FROM data | TAKE 1000'
---
> Program
> `-- [0] Pipeline
>     +-- [0] From(data)
>     `-- [1] Take
>         `-- Integer(1000)
>

# Test TAKE in a longer pipeline
parse 'FROM users | FILTER age > 18 | TAKE 5'
---
> Program
> `-- [0] Pipeline
>     +-- [0] From(users)
>     +-- [1] Filter
>     |   `-- Binary(Gt)
>     |       +-- left: Identifier(age)
>     |       `-- right: Integer(18)
>     `-- [2] Take
>         `-- Integer(5)
>

# Test TAKE with variable expression
parse 'FROM users | TAKE $limit'
---
> Program
> `-- [0] Pipeline
>     +-- [0] From(users)
>     `-- [1] Take
>         `-- Variable($limit)
>
