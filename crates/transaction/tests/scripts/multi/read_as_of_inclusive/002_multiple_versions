# Test reading different data at multiple versions in sequence

# Create version history
import a=1
---
ok

t1: begin
t1: set a=2
t1: commit
---
ok

t2: begin
t2: set a=3
t2: commit
---
ok

t3: begin
t3: set a=4
t3: commit
---
ok

# Single transaction reading at different versions
t4: begin
t4: get a
---
t4: "a" => "4"

# Go back to version 3
t4: set_as_of_inclusive 3
t4: get a
---
t4: "a" => "3"

# Go back to version 2
t4: set_as_of_inclusive 2
t4: get a
---
t4: "a" => "2"

# Go back to version 1
t4: set_as_of_inclusive 1
t4: get a
---
t4: "a" => "1"

# Go forward to version 4
t4: set_as_of_inclusive 4
t4: get a
---
t4: "a" => "4"
