# Test basic set_as_of_inclusive functionality - setting a transaction to a specific version

# Setup initial data at version 1
import a=1 b=2
---
ok

# Make a change at version 2
t1: begin
t1: set a=10 b=20
t1: commit
---
ok

# Make another change at version 3
t2: begin
t2: set a=100 b=200 c=300
t2: commit
---
ok

# Read at version 1 (initial state)
t3: begin
t3: set_as_of_inclusive 1
t3: get a b c
---
t3: "a" => "1"
t3: "b" => "2"
t3: "c" => None

# Read at version 2
t4: begin
t4: set_as_of_inclusive 2
t4: get a b c
---
t4: "a" => "10"
t4: "b" => "20"
t4: "c" => None

# Read at version 3 (latest)
t5: begin
t5: set_as_of_inclusive 3
t5: get a b c
---
t5: "a" => "100"
t5: "b" => "200"
t5: "c" => "300"
