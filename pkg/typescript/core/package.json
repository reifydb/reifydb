{
  "name": "@reifydb/core",
  "version": "0.0.1-alpha.10",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm --sourcemap",
    "test": "pnpm test:unit",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:unit:watch": "vitest --config vitest.config.ts",
    "test:unit:coverage": "vitest run --coverage --config vitest.config.ts",
    "test:coverage": "pnpm test:unit:coverage",
    "prepublishOnly": "pnpm build && pnpm test",
    "publish:npm": "pnpm publish --access public"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "^2.1.8",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "reifydb",
    "database",
    "core",
    "typescript"
  ],
  "files": [
    "dist/",
    "package.json",
    "readme.md",
    "license.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/reifydb/reifydb.git",
    "directory": "pkg/typescript/core"
  },
  "homepage": "https://github.com/reifydb/reifydb#readme",
  "bugs": {
    "url": "https://github.com/reifydb/reifydb/issues"
  }
}