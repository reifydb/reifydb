(command 'create namespace test')

(command 'create table test.conversion{col: float4}')

(command 'from [{ col: cast(cast(0, int16), float4) }] insert test.conversion')
command 'from test.conversion map col'
---
> +----------+-------+
> |  rownum  |  col  |
> +----------+-------+
> |    1     |   0   |
> +----------+-------+
> 

(command 'from [{ col: cast(cast(16777216, int16), float4) }] insert test.conversion')
command 'from test.conversion map col'
---
> +----------+------------+
> |  rownum  |    col     |
> +----------+------------+
> |    2     |  16777216  |
> |    1     |     0      |
> +----------+------------+
> 

(command 'from [{ col: cast(cast(-16777216, int16), float4) }] insert test.conversion')
command 'from test.conversion map col'
---
> +----------+-------------+
> |  rownum  |     col     |
> +----------+-------------+
> |    3     |  -16777216  |
> |    2     |  16777216   |
> |    1     |      0      |
> +----------+-------------+
> 

(command 'create table test.float4_test10{col: float4}')
!command 'from [{ col: cast(cast(16777217, int16), float4) }] insert test.float4_test10'
