(admin 'create namespace test')

(admin 'create table test::conversion{col: float8}')

(command 'INSERT test::conversion [{ col: cast(cast(0, int4), float8) }]')
command 'from test::conversion map {col}'
---
> +----------+-------+
> |  rownum  |  col  |
> +----------+-------+
> |    1     |   0   |
> +----------+-------+
>

(command 'INSERT test::conversion [{ col: cast(cast(-2147483648, int4), float8) }]')
command 'from test::conversion map {col}'
---
> +----------+---------------+
> |  rownum  |      col      |
> +----------+---------------+
> |    2     |  -2147483648  |
> |    1     |       0       |
> +----------+---------------+
>

(command 'INSERT test::conversion [{ col: cast(cast(2147483647, int4), float8) }]')
command 'from test::conversion map {col}'
---
> +----------+---------------+
> |  rownum  |      col      |
> +----------+---------------+
> |    3     |  2147483647   |
> |    2     |  -2147483648  |
> |    1     |       0       |
> +----------+---------------+
>
