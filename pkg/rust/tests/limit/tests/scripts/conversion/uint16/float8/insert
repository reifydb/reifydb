(command 'create namespace test')

(command 'create table test.conversion{col: float8}')

(command 'from [{ col: cast(cast(0, uint16), float8) }] insert test.conversion')
command 'from test.conversion map col'
---
> +-------------------+-------+
> |  __ROW__NUMBER__  |  col  |
> +-------------------+-------+
> |         1         |   0   |
> +-------------------+-------+
> 

(command 'from [{ col: cast(cast(9007199254740992, uint16), float8) }] insert test.conversion')
command 'from test.conversion map col'
---
> +-------------------+--------------------+
> |  __ROW__NUMBER__  |        col         |
> +-------------------+--------------------+
> |         2         |  9007199254740992  |
> |         1         |         0          |
> +-------------------+--------------------+
> 

(command 'create table test.float8_test10{col: float8}')
!command 'from [{ col: cast(cast(9007199254740993, uint16), float8) }] insert test.float8_test10'
